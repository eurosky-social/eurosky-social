# Local K3d Environment Secrets
# Copy this file to .env and fill in your values
# Load with: source .env

# Cloudflare Configuration (for external-dns)
export TF_VAR_cloudflare_api_token="your-cloudflare-api-token-here"

# Ozone Configuration
export TF_VAR_ozone_server_did="did:plc:xxxxxxxxxxxxx"
export TF_VAR_ozone_admin_dids="did:plc:admin1,did:plc:admin2"
export TF_VAR_ozone_db_password="$(openssl rand -hex 16)"
export TF_VAR_ozone_admin_password="$(openssl rand -hex 16)"
export TF_VAR_ozone_signing_key_hex="$(openssl rand -hex 32)"

# PDS Configuration
export TF_VAR_pds_jwt_secret="$(openssl rand -hex 32)"
export TF_VAR_pds_admin_password="$(openssl rand -hex 16)"
export TF_VAR_pds_plc_rotation_key="$(openssl rand -hex 32)"

# Generation Commands (run these to generate secure random values):
# openssl rand -hex 16  # for 16-byte secrets (128-bit)
# openssl rand -hex 32  # for 32-byte secrets (256-bit)

# For production-grade PDS PLC rotation key (K256 private key):
# Use @atproto/crypto to generate a proper K256 keypair
