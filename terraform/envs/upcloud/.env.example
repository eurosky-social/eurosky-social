# UpCloud Provider Credentials
export UPCLOUD_TOKEN="your-token"

# Terraform Backend (S3-compatible Object Storage)
export AWS_ACCESS_KEY_ID="your-access-key"
export AWS_SECRET_ACCESS_KEY="your-secret-key"
export AWS_REGION="europe-1"
export AWS_ENDPOINT_URL_S3="https://your-storage-service-endpoint"
export STATE_BUCKET="terraform-state"

# S3 buckets
export TF_VAR_backup_bucket_name="backup-bucket-name"
export TF_VAR_pds_blobstore_bucket_name="blobstore-bucket-name"

# Kubernetes Cluster Autoscaling (needs to be generated from the web console)
export TF_VAR_autoscaler_username="username"
export TF_VAR_autoscaler_password="password"

# Cloudflare
export TF_VAR_cloudflare_dns_api_token="your-cloudflare-api-token-here"

# Ozone
export TF_VAR_ozone_admin_password="generate-with-openssl-rand-hex-16"
export TF_VAR_ozone_signing_key_hex="generate-with-openssl-rand-hex-32"
export TF_VAR_ozone_db_password="generate-with-openssl-rand-hex-16"

# PDS
export TF_VAR_pds_jwt_secret="generate-with-openssl-rand-hex-32"
export TF_VAR_pds_admin_password="generate-with-openssl-rand-hex-16"
export TF_VAR_pds_plc_rotation_key="generate-k256-private-key-hex"
export TF_VAR_pds_dpop_secret="generate-with-openssl-rand-hex-32"
export TF_VAR_pds_recovery_did_key="did:key:public-key"  # Optional: Run 'goat key generate -t secp256k1', use public DID here, store secret key offline securely
export TF_VAR_pds_email_from_address="noreply@yourdomain.com"
export TF_VAR_pds_email_smtp_url="smtp://api-key:secret@email.com:587"
export TF_VAR_pds_moderation_email_address="moderation@yourdomain.com"  # Optional: For admin moderation communications
export TF_VAR_pds_moderation_email_smtp_url="smtp://api-key:secret@email.com:587"  # Optional: Can use same SMTP as regular email

# Relay
export TF_VAR_relay_admin_password="generate-with-openssl-rand-hex-16"

# Prometheus
export TF_VAR_prometheus_grafana_admin_password="generate-with-openssl-rand-hex-16"

# Alertmanager
export TF_VAR_alert_email="support@email.com"
export TF_VAR_smtp_server="smtp.email.com"
export TF_VAR_smtp_username="user@email.com"
export TF_VAR_smtp_password="your-smtp-password-here"
export TF_VAR_smtp_port=587
export TF_VAR_smtp_require_tls=true
export TF_VAR_deadmansswitch_url="https://your-healthcheck-url"
