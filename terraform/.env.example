export SCW_ACCESS_KEY="SCWXXXXXXXXX"
export SCW_SECRET_KEY="xxxxxxxxxxx"
export SCW_DEFAULT_REGION="xxxxxx"
export SCW_DEFAULT_ZONE="xxxxxx"
export SCW_DEFAULT_PROJECT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
export SCW_DEFAULT_ORGANIZATION_ID="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Backend credentials
export AWS_ACCESS_KEY_ID="${SCW_ACCESS_KEY}"
export AWS_SECRET_ACCESS_KEY="${SCW_SECRET_KEY}"
export AWS_REGION="${SCW_DEFAULT_REGION}"
export AWS_ENDPOINT_URL_S3="https://s3.${SCW_DEFAULT_REGION}.scw.cloud"
export STATE_BUCKET="terraform-state-bucket-${SCW_DEFAULT_PROJECT_ID}"

# Project vars
export TF_VAR_region="${SCW_DEFAULT_REGION}"
export TF_VAR_project_id="${SCW_DEFAULT_PROJECT_ID}"

# Ozone Configuration
export TF_VAR_ozone_server_did="did:plc:your-server-did"
export TF_VAR_ozone_admin_dids="did:plc:admin1,did:plc:admin2"
export TF_VAR_ozone_admin_password="generate-with-openssl-rand-hex-16"
export TF_VAR_ozone_signing_key_hex="generate-with-openssl-rand-hex-32"
export TF_VAR_ozone_appview_url="https://api.bsky.app"
export TF_VAR_ozone_appview_did="did:web:api.bsky.app"
export TF_VAR_ozone_db_password="generate-with-openssl-rand-base64-32"

# PDS Configuration (CRITICAL: These are cryptographic keys - NEVER regenerate)
export TF_VAR_pds_jwt_secret="generate-with-openssl-rand-hex-32"
export TF_VAR_pds_admin_password="generate-with-openssl-rand-hex-16"
export TF_VAR_pds_plc_rotation_key="generate-with-openssl-rand-hex-32"

# ============================================================================
# SECRET GENERATION (run once, copy to .env as static values)
# ============================================================================
# openssl rand -hex 32   # For: ozone_signing_key_hex, pds_jwt_secret, pds_plc_rotation_key
# openssl rand -hex 16   # For: ozone_admin_password, pds_admin_password
# openssl rand -base64 32  # For: ozone_db_password


